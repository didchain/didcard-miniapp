/* pages/widgets/vtab-bar/cust-tabbar.wxss */
.v-tabbar {
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 120rpx;
  background: white;
  display: flex;
  flex-direction: row;
  padding-bottom: env(safe-area-inset-bottom);
}

.vtab-border {
  background-color: #e4e4e4;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 2rpx;
}

.vtab-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 26rpx;
}

.vtab-cover-img {
  width: 56rpx;
  height: 56rpx;
}

.vtab-item cover-view{
  font-size:22rpx;
}

.vtab-center-img {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 10rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}