.v-tips-wrap {
  flex: 0 0 auto;
}

.v-spacer-row-shrink {
  flex: 1 1 auto;
}

.v-tips-ul {
  width: 100%;
  display: flex;
  flex-direction: column;
  -ms-flex-direction: column;
}

.v-tips-prefix text {
  color: #f6c330;
  font-size: 32rpx;
  font-weight: 600;
}

.v-tips-ul li {
  flex: 0 0 100%;
  line-height: 44rpx;
  font-size: 30rpx;
  padding-left: 16rpx;
  font-weight: 500;
}

