}

.tips-text-warp {
  flex: 1 0 100%;
  display: flex;
  flex-direction: column;
  -ms-flex-direction:column;
}

.tips-text-warp .tips-row {
  flex: 0 0 auto;
  /* padding-left: 24rpx; */
