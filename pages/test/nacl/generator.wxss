.vp-btns-group {
  width: 100%;
  display: flex;
  flex-direction: row;
  -ms-flex-direction: row;
  justify-content: center;
  justify-items: center;
  padding: 8px 0px;
}

.vp-btns-group button[type='primary'] {
  background: rgba(254, 202, 50, 1);
  color: rgba(12, 18, 61, 1);
  font-weight: 500;
}
.vp-btns-group button[type='primary']:focus,
.vp-btns-group button[type='primary']:hover {
  color: rgba(255, 255, 255, 1);
}

.vp-btns-group button[plain]:focus,
.vp-btns-group button[plain]:hover {
  color: rgba(12, 18, 61, 1);
}

.vp-btns-group button[plain] {
  background: transparent;
  border: 1px solid rgba(254, 202, 50, 1);
}

.vp-btns-group button:not(:first-child) {
  margin-left: 12px;
}
