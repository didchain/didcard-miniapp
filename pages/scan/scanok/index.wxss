.vp-full-screen {
  width: 100%;
  height: 100vh;
  flex: 1 1 auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
}

.v-mid-box {
  flex: 1 0 80%;
  margin: 24rpx;
  display: block;
  padding: 12rpx;
  border:1px solid #ccc;
}

.v-mid-box .inner-text {
  word-break: break-all;
