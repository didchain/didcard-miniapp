/* pages/idcard/export/index.wxss */
.v-upbox {
  height: 70vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.v-upbox .inner-box {
  width: calc(100% - 176rpx);
  display: flex;
  flex-direction: column;
  justify-content: center;
  justify-items: center;
  align-items: center;
  padding: 24rpx;
  background: #ffffff;
  box-shadow: 0px 2px 6px 2px rgba(12, 18, 61, 0.05);
  border-radius: 16rpx;
}

.v-upbox .inner-box view:not(:last-child) {
  padding-bottom: 24rpx;
}
.title-box .label {
  font-size: 14px;
  font-weight: 600;
  color: #b5b6ba;
  line-height: 20px;
}
.title-box .did-text {
  word-break: break-all;
  font-size: 24rpx;
}

.inner-box .v-splitor {
  width: 100%;
  height: 2rpx;
  border-top: 2rpx solid #f0f1f3;
}
.qrcode-box {
  justify-self: center;
  border: 1px solid #f6c330;
}

.qrcode-box image {
  width: 442rpx;
  height: 442rpx;
}

/** Down */
.v-btn-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.v-btn-box .inner-box {
  width: calc(100% - 126rpx);
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.v-btn-box .inner-box button {
  width:45%;
  font-weight: 400;
  font-size: 32rpx;
}
.v-btn-box .inner-box > button:not(:last-child) {
  margin-right: 24rpx;
}

.v-btn-dark {
  flex: 1 1 auto;
  color:#fff;
  background: #0c123d;
}
.v-btn-warn {
  flex: 1 1 auto;
  color:#0c123d;
  background: #f6c330;
}

.qr-mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 3;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.canvas-box {
  position: fixed;
  /* left: 0; */
  top: 999999rpx;
  opacity: 0;
  /* z-index: -1; */
}
